src:
  input:
    - Source/files/MooSelect.Licence.txt
    - Source/files/MooSelect.Base.js
    - Source/files/MooSelect.Locale.js
    - Source/files/MooSelect.Message.js
    - Source/files/MooSelect.Stage.js
    - Source/files/MooSelect.Searcher.js
    - Source/files/MooSelect.Result.js
    - Source/files/MooSelect.Results.js
    - Source/files/MooSelect.Remote.js
    - Source/files/MooSelect.Results.Remote.js
    - Source/files/MooSelect.Formular.js
